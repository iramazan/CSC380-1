<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.oswego.csc380_2.activities.CheckActivity">

    <TextView
        android:id="@+id/tableNumber"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="72dp"
        android:text=""
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/price"
        android:layout_width="101dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tableNumber"
        android:layout_below="@+id/tableNumber"
        android:layout_marginTop="112dp"
        android:text=""
        android:textAlignment="center"/>

    <Button
        android:id="@+id/paycheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/price"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="69dp"
        android:text="Pay Check" />

    <TextView
        android:id="@+id/peoplecount"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableNumber"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:text=""
        android:textAlignment="center"/>

</RelativeLayout>