<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.oswego.csc380_2.activities.ViewTableOptionsActivity">

    <EditText
        android:id="@+id/seatedCustomers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="145dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:text=""
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/seatCustomer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seat Customers"
        android:layout_marginTop="83dp"
        android:layout_below="@+id/seatedCustomers"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/actionOutputEmployee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seatedCustomers"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:text=""
        android:textAlignment="center"/>
</RelativeLayout>